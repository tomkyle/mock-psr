{
	"name": "tomkyle/mock-psr",
	"description": "Traits for mocking common PSR components in PhpUnit tests",
	"keywords": [
    "phpunit",
    "mock",
		"psr-6",
		"psr-7",
		"psr-11",
		"psr-15",
		"psr-17",
		"psr-18",
    "test-doubles",
		"cache",
		"http",
		"container",
		"dependency-injection",
		"middleware",
		"http-client",
		"http-factory",
		"testing",
		"mocking"
	],

	"authors": [{
		"name": "Carsten Witt",
		"email": "tomkyle@posteo.de",
		"role": "Developer"
	}],

	"license": "MIT",

	"autoload": {
		"psr-4": {
			"tomkyle\\MockPsr\\": "src/"
		}
	},

	"autoload-dev": {
		"psr-4": {
			"tests\\": "tests/unit"
		}
	},

	"require": {
		"php": "^8.3",
		"psr/log": "^1.1|^2.0|^3.0",
		"psr/cache": "^1.0|^2.0|^3.0",
		"psr/container": "^1.0|^2.0",
		"psr/http-factory": "^1.0",
		"psr/http-client": "^1.0",
		"psr/http-message": "^1.0|^2.0",
		"psr/http-server-handler": "^1.0",
		"nyholm/psr7": "^1.4",
		"phpunit/phpunit": "^12.0"
	},

	"require-dev": {
		"guzzlehttp/guzzle": "^7.0",
		"symfony/cache": "^5.0|^6.0|^7.0",
		"friendsofphp/php-cs-fixer": "^3.65",
		"phpstan/phpstan": "^2.1",
		"rector/rector": "^2.1",
    "tomkyle/find-run-test": "^1.0"
	}

}
